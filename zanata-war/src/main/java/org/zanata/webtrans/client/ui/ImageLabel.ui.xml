<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
        .container
        {
			width:100%;
			height:100%;
		}
		
		.label
		{
			padding-left:5px;
		}
		
	</ui:style>
	
	<g:HorizontalPanel styleName="{style.container}" verticalAlignment="ALIGN_MIDDLE">
		<g:cell width="16px">
			<g:Image ui:field="image"/>  
		</g:cell>
		<g:cell>
			<g:InlineLabel ui:field="label" styleName="{style.label}"/>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder>