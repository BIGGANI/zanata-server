<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="messages" type="org.zanata.webtrans.client.resources.WebTransMessages" />

    <ui:style field="style" type="org.zanata.webtrans.client.view.TransUnitEditView.Styles">
        .oddRow {

        }

        .evenRow {
            background-color: #F3F7FB;
        }

        .cellFormat {
            border-bottom: 1px solid silver;
        }

        .table {
            border-collapse: collapse;
            /* setting width to 99% to leave some space from the scroll bar */
            width: 99%;
            margin: 5px;
            table-layout: fixed;
        }

        .selected {
            /*background-color: #EEEEEE;*/
            border-right: 5px solid #8a2be2;
            border-left: 5px solid #8a2be2;
        }

        .noContent {
            text-align: center;
            font-style: italic;
            color: grey;
            font-size: 1.5em;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:ScrollPanel>
            <g:Grid ui:field="transUnitTable" styleName="{style.table}" />
        </g:ScrollPanel>
        <g:Label ui:field="noContentLabel" styleName="{style.noContent}" visible="false" text="{messages.noContent}" />
    </g:HTMLPanel>
</ui:UiBinder>