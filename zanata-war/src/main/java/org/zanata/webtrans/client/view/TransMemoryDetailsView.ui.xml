<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="en">
	
	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources"/>
	
	<ui:style>
		.buttonDiv
		{
			text-align:right;
		}
		
		.textArea
		{
			width:280px;
			height:40px;
			resize:none;
		}
		
		.textArea[readonly]
		{
			background:lightgray;
		}
		
		.button
		{
			float:right;
		}
		
	</ui:style>
	
	<g:DialogBox autoHide="true" modal="true" styleName="GWTDialogBox">
		<g:LayoutPanel>
			<g:layer top="5px" height="90px" left="0" right="0">
				<g:HTMLPanel>
					<g:InlineLabel styleName="headerLabel alignTop" text="Locations:"/>
						<g:ListBox ui:field='documentListBox' visibleItemCount='5' width="518px"/>
				</g:HTMLPanel>
			</g:layer>
			
			<g:layer top="106px" height="38px" left="0" right="0">
				<g:HTMLPanel>
					<g:InlineLabel styleName="headerLabel" text="Project/Iteration:"/>
					<g:InlineLabel ui:field='projectIterationName'/>
					<br/>
					<g:InlineLabel styleName="headerLabel" text="Document:"/>
					<g:InlineLabel ui:field='docName' />
				</g:HTMLPanel>
			</g:layer>
			
			<g:layer top="160px" height="70px" left="0" right="300px">
				<g:HTMLPanel>
					<g:Label styleName="headerLabel" text="Source:"/>
					<g:TextArea ui:field='sourceText' readOnly='true' styleName="{style.textArea}"/>
				</g:HTMLPanel>
			</g:layer>
			
			<g:layer top="160px" height="70px" left="300px" right="0">
				<g:HTMLPanel>
					<g:Label styleName="headerLabel" text="Comment:"/>
					<g:TextArea ui:field='sourceComment' readOnly='true' styleName="{style.textArea}"/>
				</g:HTMLPanel>
			</g:layer>
			
			
			<g:layer top="245px" height="70px" left="0" right="300px">
				<g:HTMLPanel>
					<g:Label styleName="headerLabel" text="Target:"/>
					<g:TextArea ui:field='targetText' readOnly='true' styleName="{style.textArea}"/>
				</g:HTMLPanel>
			</g:layer>
			
			<g:layer top="245px" height="70px" left="300px" right="0">
				<g:HTMLPanel>
					<g:Label styleName="headerLabel" text="Comment:"/>
					<g:TextArea ui:field='targetComment' readOnly='true' styleName="{style.textArea}"/>
				</g:HTMLPanel>
			</g:layer>
			
			
			
			<g:layer top="350px" height="25px">
				<g:HTMLPanel>
					<g:InlineLabel ui:field='lastModified' styleName="lastModifiedLabel"/>
					<g:Button ui:field='dismissButton' addStyleNames="button {style.button}"/>
				</g:HTMLPanel>
			</g:layer>
		</g:LayoutPanel>
	</g:DialogBox>
</ui:UiBinder>
