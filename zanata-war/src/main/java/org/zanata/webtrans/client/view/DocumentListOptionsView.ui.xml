<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.zanata.webtrans.client">

	<ui:style field="style" type="org.zanata.webtrans.client.view.DocumentListOptionsView.Styles">
        .mainPanel {
			width:100%;
		}
		
		.mainPanel td {
			padding-bottom:10px;
		}
		
        .mainPanel table td {
            font-size: 13px;
            padding: 1px;
            color: #FFFFFF;
        }

        .selectedPageSize {
            background-color: #B62918;
        }

        .pageSizeContainer span {
            padding: 3px;
            border: 1px solid #808080;
            cursor: pointer;
            display: block;
            height: 15px;
            width: 25px;
            text-align: center;
            float: left;
            margin-right: 3px;
        }

    </ui:style>
	
	<g:VerticalPanel styleName="{style.mainPanel}">
		<g:cell>
				<g:Label ui:field="pageSizeHeader" styleName="gwt-sideMenu-header"/>
        </g:cell>
        <g:cell>
        	<g:HTMLPanel styleName="{style.pageSizeContainer}">
        		<g:InlineLabel ui:field="twentyFiveDoc"/>
   				<g:InlineLabel ui:field="fiftyDoc"/>
   				<g:InlineLabel ui:field="hundredDoc"/>
   				<g:InlineLabel ui:field="twoHundredFiftyDoc"/>
        	</g:HTMLPanel>
        </g:cell>
	</g:VerticalPanel>
   

</ui:UiBinder> 