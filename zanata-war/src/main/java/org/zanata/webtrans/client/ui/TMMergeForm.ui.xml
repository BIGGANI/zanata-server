<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:zui='urn:import:org.zanata.webtrans.client.ui'
        >
    <ui:with field="messages" type="org.zanata.webtrans.client.resources.UiMessages"/>

    <g:Grid>
        <g:row>
            <g:customCell>
                <g:Label text="{messages.matchThreshold}"/>
            </g:customCell>
            <g:customCell>
                <g:ListBox ui:field="matchThreshold">
                    <g:item value='100'>100%</g:item>
                    <g:item value='90'>90%</g:item>
                    <g:item value='80'>80%</g:item>
                </g:ListBox>
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:Label text="{messages.differentProjectSlug}" />
            </g:customCell>
            <g:customCell>
                <zui:EnumListBox ui:field="differentProject" />
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:Label text="{messages.differentDocument}" />
            </g:customCell>
            <g:customCell>
                <zui:EnumListBox ui:field="differentDocument" />
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:Label text="{messages.differentResId}" />
            </g:customCell>
            <g:customCell>
                <zui:EnumListBox ui:field="differentResId" />
            </g:customCell>
        </g:row>
        <g:row>
            <g:customCell>
                <g:Button ui:field="confirmButton" text="{messages.mergeTMConfirm}"/>
            </g:customCell>
            <g:customCell>
                <g:Button ui:field="cancelButton" text="{messages.mergeTMCancel}"/>
            </g:customCell>
        </g:row>
    </g:Grid>
</ui:UiBinder>