<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui">
	
	<ui:with field="resources" type="org.zanata.webtrans.client.resources.Resources" />
	<ui:style>
		
		.editor {
			background-color: #ffffff;
			border-bottom: 1px solid #E5E5E5;
		}
		
		.unitStatus {
			float: right;
			width: 100px;
			height: 1.2em;
		}
		
		.rightText{
			text-align: right;
		}

		.centerText{
			margin-left:120px;
		}
		
		.topBar
		{
			border-bottom:1px solid lightGrey;
			background:#F3F2F2;
			width:100%;
			height:100%;
			padding-left:10px;
			padding-right:10px;
		}
		
		.iconButton
		{
			font-size:20px;
			cursor:pointer;
			color:#4E4E4E;
		}
		
		.iconButton:hover
		{
			color:#0085CC;
		}
		
		.searchIcon
		{
			font-size:20px;
		}
		
	</ui:style>
	
			<g:LayoutPanel>
				<g:layer top="0" height="32px">
					<g:HorizontalPanel styleName="{style.topBar}" verticalAlignment="ALIGN_MIDDLE">
						<g:cell width="450px">
							<g:HTMLPanel ui:field="filterPanelContainer"/>		
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_CENTER">
							<g:HTMLPanel ui:field="transUnitNavigationContainer" styleName="{style.centerText}"/>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_RIGHT">
							<g:InlineLabel ui:field="refreshCurrentPage" styleName="icon-arrows-cw {style.iconButton}"/>
						</g:cell>
					</g:HorizontalPanel>
				</g:layer>
	            <g:layer top='5px' height='24px' left="13px" width="24px">
            	 	<g:InlineLabel styleName="icon-search {style.searchIcon}"/>
            	 </g:layer>
	           
				<g:layer top="32px" bottom="2em">
					<g:LayoutPanel ui:field="editor" styleName="{style.editor}"/>
				</g:layer>
				<g:layer bottom="0px" height="2em" left="0" right="16px">
					<g:FlowPanel>
						<fui:Pager ui:field="pager"/>
						
					</g:FlowPanel>
				</g:layer>
				<g:layer bottom="0px" height="24px" right="0" width="24px">
					<g:InlineLabel ui:field="resize" styleName="{style.iconButton}"/>
				</g:layer>
			</g:LayoutPanel>
</ui:UiBinder> 