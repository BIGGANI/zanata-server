<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="en">
	
	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources"/>
	
	<ui:style type="org.zanata.webtrans.client.view.AppView.Styles">
		.rootContainer
		{
			width:100%;
			min-width:960px;
			background-color:#FFFFFF;
			height:100%;
		}
		
		.container
		{
			margin:5px 25px;
		}
		
		.topPanel-Navigation {

		}
		
		.topPanel-Navigation a {
			text-decoration: none;
		}
		
		.topPanel-Navigation td {
            border-right:1px solid #e0e0e0; 
            padding-right:10px;
            padding-left:10px;
        }

		.topPanel-Workspace {
			font-size: 1.1em;
			color: #595959;
			padding:2px;
		}

		.topPanel-Workspace a {
			color: white;
			font-weight: bold;
			text-decoration: none;
		}
		
		.translationStats {
			width: 140px;
			height: 1.2em;
			color: #595959;
		}
		
        .readOnly {
            font-weight: bold;
            color: #ff6622;
        }
		
		.divider {
			color: #000000;
		}
        
        .documents-link {
            cursor: pointer;
            display: inline;
            font-weight:bold;
            color:#0085CC;
        }
        
         .documents-link:hover 
        {
			text-decoration:underline;
        }
		
		.notificationLabel
		{
			font-size: 10px;
		    font-weight: bold;
		    color: white;
		    position: absolute;
		    margin-left: 1px;
		    margin-top: 0px;
		    background: orange;
		    border-radius: 2px;
		    min-width:10px;
		}
		
		.hasWarning
		{
			background:#FFC000;
		}
		
		.image
		{
			margin-top:2px;
		}

		.topMenuButton
		{
            cursor: pointer;
            vertical-align:bottom;
            font-size:20px;
		}
		
		.topMenuButton:hover
		{
            color:#0085CC;
		}
		
	</ui:style>
	<g:LayoutPanel stylePrimaryName="{style.rootContainer}">
		<g:layer top="0px" height="30px">
			<g:LayoutPanel styleName="subHeader">
				<g:layer left="5px" right="5px">
					<g:HorizontalPanel width="100%" height="100%" verticalAlignment="ALIGN_MIDDLE">
						<g:cell>
							<g:HTMLPanel styleName="{style.topPanel-Workspace}">
								<nobr>
									<g:InlineLabel ui:field="readOnlyLabel" styleName="{style.readOnly}"><ui:msg>Read-only mode</ui:msg></g:InlineLabel>
								    <g:InlineLabel ui:field="documentsLink" styleName="{style.documents-link}"><ui:msg>Documents</ui:msg></g:InlineLabel>
									<g:InlineLabel styleName="icon-right-open {style.divider}"/>
									<em>
										<span ui:field="selectedDocumentPathSpan"/><span ui:field="selectedDocumentSpan"><ui:msg>No document selected</ui:msg></span>
									</em>
								</nobr>
							</g:HTMLPanel>
						</g:cell>
						<g:cell width="200px">
	                    	 <fui:TransUnitCountBar ui:field="translationStatsBar" styleName="{style.translationStats}"/>
	                    </g:cell>
	                    <g:cell verticalAlignment="ALIGN_MIDDLE" width="24px">
	                    	<g:InlineLabel ui:field="searchAndReplace" styleName="icon-search {style.topMenuButton}"/> 
	                    </g:cell>
	                    <g:cell verticalAlignment="ALIGN_MIDDLE" width="24px">
	                        <g:InlineLabel ui:field="documentList" styleName="icon-list {style.topMenuButton}"/> 
	                    </g:cell>
	                    <g:cell verticalAlignment="ALIGN_MIDDLE" width="24px">
	                    	<g:InlineLabel ui:field="keyShortcuts" styleName="icon-keyboard {style.topMenuButton}"/> 
	                    </g:cell>
	                    <g:cell horizontalAlignment="ALIGN_CENTER" width="24px">
	                    	<g:HTMLPanel>
	                    			<g:Label ui:field="notificationLabel" addStyleNames="{style.notificationLabel}"/>
	                    			 <g:InlineLabel ui:field="notification" styleName="icon-mail {style.topMenuButton}"/> 
	                    	</g:HTMLPanel>
	                    </g:cell>
					</g:HorizontalPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer top="30px" bottom="0px" left='0px' right='0px' >
		   <g:LayoutPanel ui:field="container" styleName="{style.container}"/>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>