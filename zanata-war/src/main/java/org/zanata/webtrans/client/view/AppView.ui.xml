<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="en">
	
	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources"/>
	
	<ui:style type="org.zanata.webtrans.client.view.AppView.Styles">
	
		.topPanel-Navigation {

		}
		
		.topPanel-Navigation a {
			text-decoration: none;
		}
		
		.topPanel-Navigation td {
            border-right:1px solid #e0e0e0; 
            padding-right:10px;
            padding-left:10px;
        }

		.topPanel-Workspace {
			font-size: 1.1em;
			color: white;
			padding:2px;
		}

		.topPanel-Workspace a {
			color: white;
			font-weight: bold;
			text-decoration: none;
		}
		
		.translationStats {
			width: 140px;
			height: 1.2em;
			color: white;
		}
		
        .readOnly {
            font-weight: bold;
            color: #ff6622;
        }
		
		.userName {
			font-weight: bold;
			color: #5F5F5F;
			padding-left:5px;
		}
		
		.divider {
			color: #e0e0e0;
		}
		
		.logo {
	       margin-left:6px;
	       margin-top:2px;
        }
        
        .topPanel-right-menu {
	       margin-right:6px;
        }
        
        .documents-link {
            cursor: pointer;
            display: inline;
            font-weight:bold;
        }
        
         .documents-link:hover 
        {
			color:#ADD8E6;
        }
        
        .banner 
        {
			background:#5F5F5F;	
		}
		
		.notificationBtn
		{
			width:14px;
			height:17px;
			font-weight:bold;
			color:#5F5F5F;
			margin-right:5px;
			margin-left:2px;
		}
		
		.hasWarning
		{
			background:#FFC000;
		}
		
		.topMenuBar table
		{
			width:100%;
		}
		
		.image
		{
			margin-top:2px;
		}

		.topMenuButton
		{
			outline: none;
			padding-top: 6px;
            cursor: pointer;
		}

		
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0px" height="35px">
			<g:LayoutPanel ui:field='topPanel' styleName="{style.banner}">
				<g:layer left="0px" right="0px">
					<g:HorizontalPanel width="100%" height="100%" verticalAlignment="ALIGN_MIDDLE">
						<g:cell horizontalAlignment="ALIGN_LEFT" width="16px">
			         		<g:Image resource="{resources.logo}" styleName="{style.logo}"/>
			      		</g:cell>
						<g:cell>
							<g:HTMLPanel styleName="{style.topPanel-Workspace}">
								<nobr>
									<g:InlineLabel ui:field="readOnlyLabel" styleName="{style.readOnly}"><ui:msg>Read-only mode</ui:msg></g:InlineLabel>
								    <g:InlineLabel ui:field="documentsLink" styleName="{style.documents-link}"><ui:msg>Documents</ui:msg></g:InlineLabel>
									<span class="{style.divider}">></span>
									<em>
										<span ui:field="selectedDocumentPathSpan"/><span ui:field="selectedDocumentSpan"><ui:msg>No document selected</ui:msg></span>
									</em>
								</nobr>
							</g:HTMLPanel>
						</g:cell>
						<g:cell width="200px">
	                    	 <fui:TransUnitCountBar ui:field="translationStatsBar" styleName="{style.translationStats}"/>
	                    </g:cell>
	                    <g:cell verticalAlignment="ALIGN_MIDDLE" width="30px">
	                        <g:PushButton ui:field="keyShortcuts" styleName="{style.topMenuButton}">
                                <g:upFace image="{resources.keyboard}" />
                            </g:PushButton>
	                    </g:cell>
	                    <g:cell verticalAlignment="ALIGN_MIDDLE" width="30px">
	                        <g:PushButton ui:field="searchAndReplace" styleName="{style.topMenuButton}">
                                <g:upFace image="{resources.search}" />
                            </g:PushButton>
	                    </g:cell>
	                    <g:cell horizontalAlignment="ALIGN_LEFT" width="200px">
	                    	<g:MenuBar ui:field="topMenuBar" addStyleNames="{style.topMenuBar}"/>
	                    </g:cell>
	                    <g:cell horizontalAlignment="ALIGN_CENTER" width="18px">
	                    	<g:PushButton ui:field="notificationBtn" addStyleNames="{style.notificationBtn}"/>
	                    </g:cell>
					</g:HorizontalPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer top="35px" bottom="0px" left='0px' right='0px' >
		   <g:LayoutPanel ui:field="container" />
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>