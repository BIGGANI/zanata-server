<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    xmlns:tui="urn:import:org.zanata.webtrans.client.editor.table"
        >
	
	<ui:with field="images" type="org.zanata.webtrans.client.editor.table.TableResources" />
	
	<ui:style field="style" type="org.zanata.webtrans.client.ui.Editor.Styles">
        .rootContainer {
            outline: none;
        }

        .userLabel {
            font-size: 10px;
            text-align: center;
            padding-left: 1px;
            padding-right: 1px;
            color: #FFFFFF;
        }

        .translatorList {
            float: right;
            margin-right: 7px;
        }

        .hasValidationError {
            border: 1px solid #ff0000;
        }

    </ui:style>
	
	<g:FocusPanel ui:field="rootContainer" styleName="{style.rootContainer}">
	<g:VerticalPanel width="100%" spacing="3">
		<g:cell horizontalAlignment="ALIGN_LEFT">
			<g:HorizontalPanel ui:field="topContainer" width="100%" height="100%">
				<g:cell width="20px" verticalAlignment="middle">
	                <g:PushButton ui:field="copySourceButton" styleName="gwt-Button">
	                    <g:upFace image="{images.copySrcButton}" />
	                </g:PushButton>
                </g:cell>
                <g:cell>
                	<g:FlowPanel styleName="TableEditorCell-Target">
		                <g:HorizontalPanel ui:field="translatorList" styleName="{style.translatorList}" spacing="1"/>
		                <tui:EditorTextArea ui:field="textArea" />
	                </g:FlowPanel>
                </g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 