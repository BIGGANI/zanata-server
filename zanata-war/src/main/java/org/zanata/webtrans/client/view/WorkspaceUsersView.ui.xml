<!-- 			        		<g:TextBox styleName="{style.chatInput}" ui:field="chatInput"/> -->
<!-- 			        	</g:cell> -->
<!-- 			        	<g:cell width="40px"> -->
<!-- 							<g:PushButton addStyleNames="{style.sendButton}" ui:field="sendButton"/>	 -->
<!-- 						</g:cell>	        	 -->
<!-- 		        	</g:HorizontalPanel> -->
<!-- 			</g:layer> -->
        	</g:LayoutPanel>
        </g:center>
    </g:SplitLayoutPanel>
    
    
</ui:UiBinder> 