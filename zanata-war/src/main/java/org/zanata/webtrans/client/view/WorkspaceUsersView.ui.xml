<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources"/>

    <ui:style>
        .chatRoomScrollPanel 
        {
			height:100%;
		}
		
		.chatRoom
        {
			width:99%;
			border-radius:3px;
			padding-left:2px;
		}
		
		.userListScrollPanel
		{
			border-right:2px solid #E0E8EE;	
		}
		
		.chatSection
		{
			border-left:2px solid #E0E8EE;	
			height:100%;
			width:100%;
		}
		
		.chatInput
		{
			border:1px solid #0000A0;
			width:100%;
			border-radius:3px;
		}
		
		.sendButton
		{
	       font-size:11px;
	       border-radius:5px;
	       outline:none;
	       width:40px;
	       text-align:center;
	       margin-right:5px;
	       border-radius:3px;
		}
		
	
        
    </ui:style>

    <g:SplitLayoutPanel ui:field="mainPanel">
        <g:west size="350" min-size="30">
            <g:ScrollPanel styleName="{style.userListScrollPanel}">
                <g:VerticalPanel ui:field='userListPanel' styleName="userListTable" width="100%" />
            </g:ScrollPanel>
        </g:west>
         <g:center>
        	<g:LayoutPanel height="100%" width="100%">
        	<g:layer top="0px" bottom="24px">
				<g:ScrollPanel styleName="{style.chatRoomScrollPanel}" ui:field="chatRoomScrollPanel">
			    	<g:VerticalPanel ui:field="chatRoom" styleName="{style.chatRoom}"/>
			    </g:ScrollPanel>
			</g:layer>
			<!-- Disable chat function until 1.7, need further testing on HTML safe-->
