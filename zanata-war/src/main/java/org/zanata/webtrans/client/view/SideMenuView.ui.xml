<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.zanata.webtrans.client">
	<ui:style type="org.zanata.webtrans.client.view.SideMenuView.Styles">
		.mainPanel 
		{
			color:#FFFFFF;
			width:250px;
			padding:15px;
			background-color: #444444;
			border-radius: 0 0 0 5px;
		}

		.sideMenuButton
		{
			cursor: pointer;
		    font-size:24px;
		    color:#FFFFFF;
		    background-color: #444444;
			border-top-left-radius:5px;
			border-bottom-left-radius:5px;
			display:block;
			margin-bottom:10px;
		}
		
		.menuButton
		{
		    cursor: pointer;
		    font-size:18px;
		    color:#FFFFFF;
		    background: #626262;
			border-top-left-radius:5px;
			border-bottom-left-radius:5px;
			padding-left:2px;
			margin:2px;
		}
		
		.sideMenuButton:hover, .menuButton:hover, .selectedButton
		{
		    color: #96FFFF;
		    background:#444444;
		}
		
		.alertTab
		{
			color:yellow;
		}
		
		.participantsLabel
		{
			text-align:center;
			font-size: 10px;
		    font-weight: bold;
		    color: white;
		    position: absolute;
		    margin-top: -5px;
		    background: orange;
		    border-radius: 2px;
		    min-width:10px;
		    z-index:900;
		}
		
	</ui:style>

	<g:LayoutPanel>
		<g:layer top="0" bottom="0" left="0" width="24px">
			<g:FlowPanel>
	    		<g:InlineLabel ui:field="sideMenuTab" styleName="icon-cog-alt {style.sideMenuButton}"/>
	    		<g:InlineLabel ui:field="participantsLabel" addStyleNames="{style.participantsLabel}"/>
	    		<g:InlineLabel ui:field="chatTab" styleName="icon-chat-1 {style.menuButton}"/>
	    		<g:InlineLabel ui:field="editorOptionsTab" styleName="icon-cog {style.menuButton}"/>
	    		<g:InlineLabel ui:field="validationOptionsTab" styleName="icon-ok-circle-2 {style.menuButton}"/>
			</g:FlowPanel>
    	</g:layer>
    	
    	
    	<g:layer top="0px" bottom="10px" left="24px" right="0">
    		<g:LayoutPanel ui:field="container" styleName="{style.mainPanel}"/>
    	</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 