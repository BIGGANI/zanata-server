<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:f="urn:import:org.zanata.webtrans.client"
    xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style type="org.zanata.webtrans.client.view.DocumentListView.Styles">
        .unitStatus {
            float: right;
            width: 100px;
            height: 1.2em;
        }
        .mainPanel {
            background-color: #ffffff;
        }
        
        .optionStyle
        {
			font-size:13px;
			color:#595959;
		}
		
		.statsOption
		{
			display:inline-block;
			text-align:left;
		}
		
		.filterTextBox
		{
			font-size:16px;
			margin: 0px;
			border: 2px solid #C5C5C5;
			border-radius: 3px;
			width:415px;
			line-height:18px;
			padding-left:25px;
		}
		
		.topBar
		{
			border-bottom:1px solid lightGrey;
			background:#F3F2F2;
			width:100%;
			height:100%;
			padding-left:10px;
			padding-right:10px;
		}
		
		.listContainer
		{
			padding:10px;
		}
		
		.searchIcon
		{
			font-size:20px;
		}
		
		.pageSizeContainer span {
            padding: 3px;
            border: 1px solid #808080;
            cursor: pointer;
            display: block;
            height: 15px;
            width: 25px;
            text-align: center;
            float: left;
            margin-right: 3px;
            background:#808080;
            color:#FFFFFF;
        }
        
        .pageSizeContainer span:hover,  .pageSizeContainer span.selectedDocCount {
            background:#B62918;
        }
        
        
        
    </ui:style>
    <g:LayoutPanel>
        <g:layer top="0px" bottom="0px">
            <g:LayoutPanel styleName="{style.mainPanel}">
                <g:layer top='0' height='32px' left="0px" right="0px">
                	<g:HorizontalPanel styleName="{style.topBar}" verticalAlignment="ALIGN_MIDDLE">
                		<g:cell width="420px">
                			<g:TextBox ui:field='filterTextBox' addStyleNames="{style.filterTextBox}"/>
                		</g:cell>
                		<g:cell width="210px">
                			<g:HTMLPanel>
                				<g:CheckBox ui:field="caseSensitiveCheckBox" styleName="{style.optionStyle}"><ui:msg>Case sensitive</ui:msg></g:CheckBox>
                				<g:CheckBox ui:field="exactSearchCheckBox" styleName="{style.optionStyle}"><ui:msg>Exact match</ui:msg></g:CheckBox>
                			</g:HTMLPanel>
                		</g:cell>
                		<g:cell horizontalAlignment="ALIGN_RIGHT">
                			<g:HTMLPanel>
                        		<g:InlineLabel styleName="{style.optionStyle}"><ui:msg>Statistic: </ui:msg></g:InlineLabel>
                        		<g:RadioButton ui:field="statsByWord" styleName="{style.optionStyle} {style.statsOption}" name="statsOption"/>
                        		<g:RadioButton ui:field="statsByMsg" styleName="{style.optionStyle} {style.statsOption}" name="statsOption"/>
                        	</g:HTMLPanel>
                		</g:cell>
                	</g:HorizontalPanel>
                </g:layer>
                 <g:layer top='5px' height='24px' left="13px" width="24px">
            	 	<g:InlineLabel styleName="icon-search {style.searchIcon}"/>
            	 </g:layer>
                <g:layer top='32px' bottom="0px">
                	<g:ScrollPanel styleName="{style.listContainer}">
                		<g:VerticalPanel width="100%">
	                		<g:FlowPanel ui:field="documentListContainer"/>
	                		<c:SimplePager ui:field="pager" location='CENTER'/> 
	                		<g:cell>
	                			<g:HTMLPanel styleName="{style.pageSizeContainer}">
	                				<g:InlineLabel ui:field="twentyFiveDoc"/>
	                				<g:InlineLabel ui:field="fiftyDoc"/>
	                				<g:InlineLabel ui:field="hundredDoc"/>
	                				<g:InlineLabel ui:field="allDoc"/>
	                			</g:HTMLPanel>
	                		</g:cell>
		                    
		                    
	                    </g:VerticalPanel>
                    </g:ScrollPanel> 
                </g:layer>
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>

    
</ui:UiBinder> 