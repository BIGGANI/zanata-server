<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:f="urn:import:org.zanata.webtrans.client"
    xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .unitStatus {
            float: right;
            width: 100px;
            height: 1.2em;
        }
        .mainPanel {
            background-color: #ffffff;
        }
        
        .optionStyle
        {
			font-size:13px;
			color:#595959;
		}
		
		.filterTextBox
		{
			font-size:16px;
			padding: 2px;
			margin: 0px;
			border: 2px solid #C5C5C5;
			border-radius: 3px;
			width:440px;
		}
		
		.topBar
		{
			border-bottom:1px solid lightGrey;
			background:#F3F2F2;
		}
		
		.listContainer
		{
			padding:10px;
		}
        
    </ui:style>
    <g:LayoutPanel ui:field="rootContainer">
        <g:layer top="0px" bottom="0px">
            <g:LayoutPanel styleName="{style.mainPanel}">
                <g:layer top='0' height='40px' left="0px" right="0px">
                    <g:LayoutPanel styleName="{style.topBar}">
                        <g:layer top="7px" bottom="5px" left="15px" width="450px">
                            <g:TextBox ui:field='filterTextBox' styleName="{style.filterTextBox}"/>
                        </g:layer>
                        <g:layer top="10px" height="34px" left="470px" width="120px">
                            <g:CheckBox ui:field="caseSensitiveCheckBox" styleName="{style.optionStyle}"><ui:msg>Case sensitive</ui:msg></g:CheckBox>
                        </g:layer>
                        <g:layer top="10px" height="34px" left="585px" width="140px">
                            <g:CheckBox ui:field="exactSearchCheckBox" styleName="{style.optionStyle}"><ui:msg>Exact match only</ui:msg></g:CheckBox>
                        </g:layer>
                        <g:layer right="0" width="200px" top="10px" bottom="0">
                        	<g:HTMLPanel>
                        		<g:InlineLabel styleName="{style.optionStyle}"><ui:msg>Statistic: </ui:msg></g:InlineLabel>
                        		<g:ListBox ui:field="statsOptions"/>
                        	</g:HTMLPanel>
                        </g:layer>
                    </g:LayoutPanel>
                </g:layer>
                <g:layer top='40px' bottom="0px">
                	<g:ScrollPanel styleName="{style.listContainer}">
                		<g:VerticalPanel width="100%">
	                		<g:FlowPanel ui:field="documentListContainer"/>
		                    <c:SimplePager ui:field="pager" location='CENTER'/> 
	                    </g:VerticalPanel>
                    </g:ScrollPanel> 
                </g:layer>
                
            </g:LayoutPanel>
        </g:layer>
    </g:LayoutPanel>

    
</ui:UiBinder> 