<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="org.zanata.webtrans.client.view.KeyShortcutView.Styles">
		.keyShortcutPanel {
			color: #FFFFFF;
			background: black;
			opacity: 0.85;
			border-radius: 8px;
			padding: 20px;
		}
		
		.keyShortcutHeading {
			font-size: 1.4em;
		}
		
		.keyShortcutCategoryTitle {
			font-size: 1.2em;
			padding:4px 0;
		}
		
		.keyShortcutTable
		{
			padding-bottom:5px;
			font-size: 1.2em;
		}
		
		.keyShortcutTable td
		{
			color:#FFA07A;
			background:black;
			padding: 2px 10px;
			border-width: 0px;
			border-bottom-width: 1px;
			border-color: #301a1a;
		}
	</ui:style>

	<g:VerticalPanel styleName="{style.keyShortcutPanel}" width="515px" height="220px">
		<g:cell horizontalAlignment="ALIGN_CENTER">
			<g:Label ui:field="heading" styleName="{style.keyShortcutHeading}"/>
		</g:cell>
		
		<g:cell>
			<g:FlowPanel ui:field="shortcutContainer"/>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder>
