<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources" type="org.zanata.webtrans.client.resources.Resources" />

	<ui:style type="org.zanata.webtrans.client.view.NotificationView.Styles">
		.mainPanel {
			margin:2px 0px;
			width:100%;
			height:100%;
		}
		
		.messagePanel 
		{
			padding:3px;
			width:100%;
		}
		
		.messagePanel tr:hover
		{
			background:#282828;
		}
		
		.messageRow 
		{
			border-bottom:1px dotted #FFFFFF;
		}
		
		.messageRow tr:first-child
		{
			background:none;
		}
		
		.messageRow tr:last-child
		{
			background:none;
		}
		
		.link, .link:hover, .link:visited
		{
			color:#FFFFFF;	
			padding:5px;
			outline:none;
			opacity:0.8;
		}

        .inlineLink, .inlineLink:hover, .inlineLink:visited
        {
            text-decoration: underline;
            cursor: pointer;
            color:#ffa500;
            font-size:0.9em;
            font-weight:bold;
        }
        
        .disabledInlineLink, .disabledInlineLink:hover, .disabledInlineLink:visited
        {
			color:#FF4500;
            font-size:0.8em;
            font-weight:bold;
            opacity:0.6;
            cursor:text;
		}
		
		.timeLabel
		{
			font-size:0.7em;
			color:#ffa500;
			font-weight:bold;
		}
		
		.msgLabel
		{
			padding-left:3px;
			word-wrap:break-word;
			color:#DBDBDB;
			font-size:12px;
		}
		
		.error
		{
			color:#F62817;
		}
		
		.warning
		{
			color:#FF9E5E;
		}
		
		.info
		{
			color:#43C6DB;
		}
		
		.severity
		{
			font-size:13px;
		}
		
	</ui:style>

	<g:LayoutPanel styleName="{style.mainPanel}">
		<g:layer top="0px" bottom="24px">
			<g:ScrollPanel ui:field="scrollPanel">
				<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}" />
			</g:ScrollPanel>
		</g:layer>
		<g:layer bottom="2px" height="24px">
			<g:Anchor href="javascript:void(0)" ui:field="clearLink" addStyleNames="{style.link}"><ui:msg>Clear</ui:msg></g:Anchor>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>