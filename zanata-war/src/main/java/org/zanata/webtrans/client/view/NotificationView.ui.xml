<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources" type="org.zanata.webtrans.client.resources.Resources" />

	<ui:style type="org.zanata.webtrans.client.view.NotificationView.Styles">
		.mainPanel {
			background-color: black;
			width:400px;
			color:#FFFFFF;
			border-radius:8px;
			opacity:0.8;
		}
		
		.messagePanel 
		{
			width: 100%;
			padding:5px;
			
		}
		.messageRow 
		{
			border-bottom:1px dotted #FFFFFF;
		}
		
		.link, .link:hover, .link:visited
		{
			color:#FFFFFF;	
			padding:5px;
		}
		
	</ui:style>

	<g:VerticalPanel styleName="{style.mainPanel}" spacing="2">
		<g:cell>
			<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}" />
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:HorizontalPanel>
				<g:cell>
					<g:Anchor href="javascript:void(0)" ui:field="dismissLink" addStyleNames="{style.link}"><ui:msg>Dismiss</ui:msg></g:Anchor>
				</g:cell>
				<g:cell>
					<g:Anchor href="javascript:void(0)" ui:field="clearLink" addStyleNames="{style.link}"><ui:msg>Clear</ui:msg></g:Anchor>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>