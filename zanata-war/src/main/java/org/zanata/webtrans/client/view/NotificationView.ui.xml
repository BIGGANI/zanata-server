<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="resources" type="org.zanata.webtrans.client.resources.Resources" />

	<ui:style type="org.zanata.webtrans.client.view.NotificationView.Styles">
		.mainPanel {
			background-color: black;
			width:320px;
			color:#FFFFFF;
			border-radius:8px;
			opacity:0.9;
		}
		
		.messagePanel 
		{
			width: 100%;
			padding:5px;
			
		}
		
		.messagePanel tr:hover
		{
			opacity:1;
			background:#505050;
		}
		
		.messagePanel tr:first-child
		{
			opacity:1;
			background:#505050;
		}
		
		.messagePanel tr
		{
			opacity:0.8;
		}
		
		.messageRow 
		{
			border-bottom:1px dotted #FFFFFF;
		}
		
		.messageRow tr:first-child
		{
			background:none;
		}
		
		.messageRow tr:last-child
		{
			background:none;
		}
		
		.link, .link:hover, .link:visited
		{
			color:#FFFFFF;	
			padding:5px;
			outline:none;
			opacity:0.8;
		}

        .inlineLink, .inlineLink:hover, .inlineLink:visited
        {
            text-decoration: underline;
            cursor: pointer;
            color:#ffa500;
            font-size:0.8em;
            font-weight:bold;
        }
        
        .disabledInlineLink, .disabledInlineLink:hover, .disabledInlineLink:visited
        {
			color:#FF4500;
            font-size:0.8em;
            font-weight:bold;
            opacity:0.6;
            cursor:text;
		}
		
		.image
		{
			margin-top:2px;
		}
		
		.timeLabel
		{
			font-size:0.7em;
			color:#ffa500;
			font-weight:bold;
		}
		
		.scrollPanel
		{
			max-height:320px;
			width:320px;
		}
		
		.msgLabel
		{
			padding:0 3px;
			word-break:break-all;
			word-wrap:break-word;
		}
		
	</ui:style>

	<g:VerticalPanel styleName="{style.mainPanel}" spacing="2">
		<g:cell>
			<g:ScrollPanel ui:field="scrollPanel" styleName="{style.scrollPanel}" >
				<g:VerticalPanel ui:field="messagePanel" styleName="{style.messagePanel}" />
			</g:ScrollPanel>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:HorizontalPanel>
				<g:cell>
					<g:Anchor href="javascript:void(0)" ui:field="dismissLink" addStyleNames="{style.link}"><ui:msg>Dismiss</ui:msg></g:Anchor>
				</g:cell>
				<g:cell>
					<g:Anchor href="javascript:void(0)" ui:field="clearLink" addStyleNames="{style.link}"><ui:msg>Clear</ui:msg></g:Anchor>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder>