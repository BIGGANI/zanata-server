<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    xmlns:tui="urn:import:org.zanata.webtrans.client.editor.table"
        >
    <ui:with field="resources" type="org.zanata.webtrans.client.resources.Resources" />
	<ui:style type="org.zanata.webtrans.client.view.LayoutSelectorView.Styles">
		.mainPanel
		{
			
		}
		
		.container{
			width:400px;
			height:100px;
			color:#FFFFFF;
		}
		
		.layoutList 
		{
			opacity:0.7;
			background:#000000;
			width:100%;
			height:100px;
			border-radius:5px;
		}
		
		.layoutTable
		{
			width:80px;
			height:80px;
		}
		
		.layoutTable td
		{
			font-size:0.5em;
			border-radius:3px;
			box-shadow:inset 0 0 6px 2px #323232;
		}
		
		.layoutContainer
		{
			opacity:0.7;
			outline:none;
		}
		.layoutContainer:hover
		{
			opacity:1.5;
		}
		
	</ui:style>
	
	<g:VerticalPanel styleName="{style.container}" horizontalAlignment="ALIGN_CENTER">
		<g:cell>
			<g:HorizontalPanel ui:field="layoutList" styleName="{style.layoutList}" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
					<g:FocusPanel ui:field="maximizeLayoutContainer" styleName="{style.layoutContainer}"/>
					<g:FocusPanel ui:field="defaultLayoutContainer" styleName="{style.layoutContainer}"/>
					<g:FocusPanel ui:field="noOptionLayoutContainer" styleName="{style.layoutContainer}"/>
					<g:FocusPanel ui:field="noSouthLayoutContainer" styleName="{style.layoutContainer}"/>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
</ui:UiBinder> 