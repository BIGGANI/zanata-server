<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

	<ui:with field='resources' type="org.zanata.webtrans.client.Resources"/>

	<ui:style>
		.unitStatus {
			float: right;
			width: 100px;
			height: 1.2em;
		}
		.mainPanel {
			background-color: #ffffff;
			border: 3px solid #e0e8ee;
			-moz-border-radius: 7px;
			-webkit-border-radius: 7px;
		}
		.body {
            padding: 5px;
            padding-left: 20px;
            border-top: 1px solid #f5f5f5;
            border-bottom: 1px solid #f5f5f5;
            height: 28px;
        }
        
        .label {
            display: inline;
            font-size: 1.3em;
            padding-left: 10px;
        }
        
        .columnHeader {
            float:left;
            font-size:12px;
            font-weight:bold;
            font-family:Arial,Verdana,sans-serif;
            text-align:center;
            width:110px;
            padding-top:4px;
        }
        
        .columnSeperator {
            float:left;
            font-size:14px;
            font-weight:bold;
            font-family:Arial,Verdana,sans-serif;
            padding-top:2px;
        }
        
       
        
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0px" bottom="8px">
			<g:LayoutPanel styleName="{style.mainPanel}">
				<g:layer top='2px' height='20px' left="2px" right="104px">
					<fui:ClearableTextBox ui:field='filterTextBox'/>
				</g:layer>
				<g:layer top='4px' height='18px' right="2px" width="100px">
					<f:TransUnitCountBar ui:field='transUnitCountBar' styleName="{style.unitStatus}"/>
				</g:layer>
				
				<g:layer top="25px" height="20px" width="470px" right="0" margin-left="auto">
				    <g:FlowPanel width="100%">
				        <g:Label styleName="{style.columnSeperator}">|</g:Label>
					    <g:Label styleName="{style.columnHeader}">Statistic</g:Label>
					    <g:Label styleName="{style.columnSeperator}">|</g:Label>
					    <g:Label styleName="{style.columnHeader}">Translated</g:Label>
					    <g:Label styleName="{style.columnSeperator}">|</g:Label>
					    <g:Label styleName="{style.columnHeader}">Untranslated</g:Label>
					    <g:Label styleName="{style.columnSeperator}">|</g:Label>
					    <g:Label styleName="{style.columnHeader}">Remaining</g:Label>
					    <g:Label styleName="{style.columnSeperator}">|</g:Label>
				    </g:FlowPanel>
				</g:layer>
                
				<g:layer top='50px' bottom="2px">
					<g:ScrollPanel ui:field='documentScrollPanel'>
						<g:FlowPanel ui:field='documentList' />
					</g:ScrollPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
	</g:LayoutPanel>

	
</ui:UiBinder> 