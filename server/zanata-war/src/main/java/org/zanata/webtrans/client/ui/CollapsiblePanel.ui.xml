<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:with field='resources' type="org.zanata.webtrans.client.editor.table.TableResources"/>
    
    <ui:style>
        .container {
           width:80%;
           height:100%;
           padding-top:15px;
        }
        
        .header {
            font-size: 11px;
            font-weight:bold;
            width:100%;
            text-align:center;
            cursor:pointer;
            background:#F3F2F2;
            border-top:1px solid #E0E8EE;
            
        }
        
        .content {
	       border:1px solid #E0E8EE;
        }
        
    </ui:style>
    
    <g:VerticalPanel styleName="{style.container}">
        <g:Label ui:field="headerLabel" styleName="{style.header}"/>
        <g:LayoutPanel ui:field="contentPanel" styleName="{style.content}"/>
    
    </g:VerticalPanel>
    
    

</ui:UiBinder>