<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

	<ui:with field='resources' type="org.zanata.webtrans.client.Resources" />
    
    <ui:style>
        .imageButton {
            cursor: pointer;
        }
                
    </ui:style>
    
	<g:LayoutPanel>
		<g:layer top="0px" bottom="0px">
			<g:SplitLayoutPanel styleName="PageSplitLayoutPanel" ui:field="mainSplitPanel">
				<g:east size="200" min-size="20">
					<g:LayoutPanel ui:field="sidePanelOuterContainer">
						<g:layer top="0px" bottom="8px">
							<g:LayoutPanel ui:field="sidePanelContainer" />
						</g:layer>
						<g:layer right="3px" top="4px" width="15px" height="15px">
							<g:Image resource="{resources.minimizeButton}" ui:field="sidePanelMinimize" styleName="{style.imageButton}" />
						</g:layer>
					</g:LayoutPanel>
				</g:east>
				<g:center>
				    <g:LayoutPanel>
				        <g:layer>
				            <g:LayoutPanel ui:field="editorContainer" />
				        </g:layer>
				        
				        <g:layer height="1.3em" width="18px" right="2px" top="6px">
                            <g:FlowPanel>
                                <g:Image resource="{resources.infoButton}" ui:field="showSidePanelViewLink" styleName="{style.imageButton}" />
                            </g:FlowPanel>
                        </g:layer>
				    </g:LayoutPanel>
				</g:center>
			</g:SplitLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>