<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="en">
	
	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources"/>
	
	<g:DialogBox autoHide="true" modal="true">
	  <g:caption><b><ui:msg>Glossary Details</ui:msg></b></g:caption>
	  <g:HTMLPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel width="100%">
					<g:cell width="50%">
						<g:HorizontalPanel>
						<g:Label><ui:msg>Entries:</ui:msg></g:Label>
					    <g:ListBox ui:field='entryListBox' visibleItemCount='5'/>
					    </g:HorizontalPanel>
				    </g:cell>
				    <g:cell width="50%">
				    	<g:VerticalPanel>
				    	<g:Label><ui:msg>Source Reference:</ui:msg></g:Label>
						<g:TextArea ui:field="srcRef" readOnly='true'/>
						 </g:VerticalPanel>
				    </g:cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:VerticalPanel>
						<g:Label ui:field="sourceLabel"/>
						<g:TextArea ui:field='sourceText' readOnly='true'/>
						<g:Label><ui:msg>Comments:</ui:msg></g:Label>
						<g:TextArea ui:field='sourceComment' readOnly='true'/>
					</g:VerticalPanel>
					<g:VerticalPanel>
						<g:Label ui:field="targetLabel"/>
						<g:TextArea ui:field='targetText' readOnly='true'/>
						<g:Label><ui:msg>Comments:</ui:msg></g:Label>
						<g:TextArea ui:field='targetComment' readOnly='true'/>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
	    <g:Button ui:field='dismissButton'><ui:msg>Dismiss</ui:msg></g:Button>
	  </g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder>
