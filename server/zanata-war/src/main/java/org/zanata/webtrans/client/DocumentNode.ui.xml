<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.zanata.webtrans.client">

	<ui:with field='resources' type="org.zanata.webtrans.client.Resources"/>

	<ui:style type="org.zanata.webtrans.client.DocumentNode.Styles">
		.body {
			padding-top: 5px;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
			height: 28px;
		}
		
		.rightBody {
            padding-left: 20px;
            padding-top:5px;
            border-top: 1px solid #f5f5f5;
            border-bottom: 1px solid #f5f5f5;
            height: 28px;
            float:right;
            width:470px;
        }
		
		.label {
			display: inline;
			font-size: 1.3em;
			padding-left: 10px;
		}
		
		.status {
			display: inline;
			float: right;
			padding-left: 10px;
			width: 25px;
			font-size: xx-small;
			height: 1.1em;
		}
		
		.menu {
			float: right;
		}
		
		.mouseOver {
			background-color: #fcfcfc;
			cursor: pointer;
		}
		
		.selected {
			background-color: #ffbbbb;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
		}
		
		.unitStatus {
			float: left;
			padding-right:25px;
			width: 90px;
			height: 1.2em;
			top:3px;
		}
		
		.columnHeader {
            float:left;
            font-size:12px;
            font-weight:bold;
            font-family:Arial,Verdana,sans-serif;
            text-align:center;
            width:110px;
            padding-top:4px;
        }
        
        .columnSeperator {
            float:left;
            font-size:14px;
            font-weight:bold;
            font-family:Arial,Verdana,sans-serif;
            padding-top:2px;
        }
        
        .documentNode {
            padding-left:20px;
        }
		
	</ui:style>
	<g:HorizontalPanel width="100%" styleName='{style.documentNode}'>
        <g:FlowPanel styleName='{style.body}' ui:field='rootPanel'>
            <g:Image resource='{resources.documentImage}'  />
            <g:Label ui:field='documentLabel' styleName="{style.label}" />
        </g:FlowPanel>

		<g:FlowPanel styleName='{style.rightBody}'>
			<g:Label styleName="{style.columnSeperator}">|</g:Label>
			<f:TransUnitCountGraph ui:field='transUnitCountGraph' styleName="{style.unitStatus}" />
			<g:Label styleName="{style.columnSeperator}">|</g:Label>
			<g:Label ui:field='translatedWordsLabel' styleName="{style.columnHeader}" />
			<g:Label styleName="{style.columnSeperator}">|</g:Label>
			<g:Label ui:field='untranslatedWordsLabel' styleName="{style.columnHeader}" />
			<g:Label styleName="{style.columnSeperator}">|</g:Label>
			<g:Label ui:field='hoursLeftLabel' styleName="{style.columnHeader}" />
			<g:Label styleName="{style.columnSeperator}">|</g:Label>
	   </g:FlowPanel>
               
	</g:HorizontalPanel>
	
</ui:UiBinder> 