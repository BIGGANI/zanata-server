<?xml version="1.0" encoding="UTF-8"?>

<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_1.xsd">

    <datasource jndi-name="java:jboss/datasources/${ds.jndi.name}"
            pool-name="zanataDatasource" enabled="true" use-java-context="true">
        <connection-url>${ds.connection.url}</connection-url>
        <driver>h2</driver>
        <security>
            <user-name>${ds.username}</user-name>
<!--
            <password>${ds.password}</password>
-->
        </security>
    </datasource>

</datasources>
